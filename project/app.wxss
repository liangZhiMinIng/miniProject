/**app.wxss**/
@import "/assets/wxss/iconfont.wxss";

page {
  --themeColor:#1296db;
  --themeFontColor : #363636;
  --themeFontSize : 26rpx;
}
.t-icon {
  display: inline-block;
  width: 40px; 
  height: 40px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100%;
}
.wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  padding:0 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  height:calc(100vh - 100rpx);
  /* margin-top:-24rpx; */
  overflow-y:auto;
  border-radius: 24rpx;
  /* padding:56rpx 32rpx; */
  /* box-sizing: border-box; */
  color:var(--themeFontColor);
} 
.book-list-title{
  display: flex;
  justify-content: space-between;
  font-weight: 600;
}
.more{
  font-size: var(--themeFontSize);
  font-weight: normal;
}
.price1{
  font-size: 24rpx;
  color: #363636;
  font-weight: bold;
  text-align: center;
}
.price2{
  font-size: 24rpx;
  font-weight: bold;
  color: red;
  /* text-align: center; */
}
.shopping{
  margin-top: 12rpx;
  padding: 12rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  box-shadow: 0rpx 4rpx 32rpx rgb(91 90 205 / 0.4);
}
.rep-book{
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  
}
.book-list-title{
  padding-top: 12rpx;
  box-sizing: border-box;
}
.rep-book image{
  width: 140rpx;
  height:200rpx;
}
.rep-book-list{
  padding-right: 22rpx;
  box-sizing: border-box;
}
.rep-book-list .copyright{
  color: var(--themeFontColor);
  font-size: 26rpx;
}
.rep-book-list .copyright .blue-font{
  color: blue;
}
.small-font{
  color: #a89fbe;
  text-decoration: line-through;
  font-size:24rpx ;
}
.shop-cart{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 210rpx;
  border-radius: 15%;
  box-shadow: 0rpx 4rpx 32rpx rgb(91 80 255 / 0.4);
  /* box-sizing: border-box; */
  background-color:var(--themeColor);
  color: #fff;
  font-size: 28rpx;
}